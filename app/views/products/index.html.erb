<% provide :title, t(".products") %>

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <a href="#"><i class="fa fa-home"></i> <%= t "application.home" %></a>
          <span><%= t ".shop" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb Section Begin -->

<!-- Product Shop Section Begin -->
<section class="product-shop spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
        <div class="filter-widget">
          <h4 class="fw-title"><%= t ".Categories" %></h4>
          <ul class="filter-catagories">
              <% @categories.each do |category| %>
                <li>
                    <%= link_to category.name, "#" %>
                    <em>(<%= category.products.count %>)</em>
                </li>
              <% end %>
          </ul>
        </div>
        <div class="filter-widget">
          <h4 class="fw-title"><%= t ".price" %></h4>
          <div class="filter-range-wrap">
            <div class="range-slider">
              <div class="price-input">
                <input type="text" id="minamount">
                <input type="text" id="maxamount">
              </div>
            </div>
            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
              data-min="33" data-max="98">
              <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
              <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
              <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
            </div>
          </div>
          <a href="#" class="filter-btn"><%= t ".filter" %></a>
        </div>
        <div class="filter-widget">
          <h4 class="fw-title"><%= t ".tags" %></h4>
          <div class="fw-tags">
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
            <a href="#"><%= t "n/a" %></a>
          </div>
        </div>
      </div>
      <div class="col-lg-9 order-1 order-lg-2">
        <div class="product-show-option">
          <div class="row">
            <div class="col-lg-7 col-md-7">
              <div class="select-option">
                <select class="sorting">
                  <option value=""><%= t ".default_sorting" %></option>
                </select>
                <span class="num-show"><%= t ".show" %>: </span>
                <%= search_form_for @search, url: products_path do |f|%>
                <%= select_tag :limit, options_from_collection_for_select(Settings.show_limit, :second, :second,
                  selected: params[:limit] || Settings.show_limit.limit), class: "p-show", id: "show-limit"%>
                <%= f.submit "search", class: "btn btn-info", style: "display: none; margin-right: 10px"%>
                <% end %>
              </div>
            </div>
            <div class="col-lg-5 col-md-5 text-right">
              <p><%= t ".show" %>
                <%= products_showing(params[:limit], params[:page]) %> -
                <%= products_showing(params[:limit], params[:page]) + params[:limit].to_i - 1 %>
                <%= t ".products" %>
              </p>
            </div>
          </div>
        </div>
        <div class="product-list">
          <div class="row">
            <% @products.each do |product| %>
            <div class="col-lg-4 col-sm-6">
              <div class="product-item">
                <div class="pi-pic">
                  <img src="assets/img/products/product-3.jpg" alt="">
                  <div class="icon">
                    <i class="icon_heart_alt"></i>
                  </div>
                  <ul>
                    <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                    <li class="quick-view"><a href="#">+ <%= t ".quick_view" %></a></li>
                    <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                  </ul>
                </div>
                <div class="pi-text">
                  <div class="catagory-name"><%= t ".coat" %></div>
                  <a href="#">
                    <h5><%= product.name %></h5>
                  </a>
                  <div class="product-price">
                    <%= number_to_currency product.price %>
                    <span><%= number_to_currency product.price %></span>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
            <%= paginate @products, theme: 'twitter-bootstrap-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Product Shop Section End -->

