<!-- Header Section Begin -->
<header class="header-section">
  <div class="header-top">
    <div class="container">
      <div class="ht-left">
        <div class="mail-service">
          <i class=" fa fa-envelope"></i>
          <%= t :email_contact %>
        </div>
        <div class="phone-service">
          <i class=" fa fa-phone"></i>
          <%= t :number_phone %>
        </div>
      </div>
      <div class="ht-right">
        <a href="#" class="login-panel"><i class="fa fa-user"></i></a>
        <div class="lan-selector">
          <select class="language_drop" name="countries" id="countries">
            <option value='yt' data-image="assets/img/flag-1.jpg" data-imagecss="flag yt"
              data-title="English"><%= link_to t("header.en"), locale: :en %></option>
            <option value='yu' data-image="assets/img/flag-2.jpg" data-imagecss="flag yu"
              data-title="Vietnamese"><%= link_to t("header.vi"), locale: :vi %></option>
          </select>
        </div>
        <div class="top-social">
          <a href="#"><i class="ti-facebook"></i></a>
          <a href="#"><i class="ti-twitter-alt"></i></a>
          <a href="#"><i class="ti-linkedin"></i></a>
          <a href="#"><i class="ti-pinterest"></i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="inner-header">
      <div class="row">
        <div class="col-lg-2 col-md-2">
          <div class="logo">
            <a href="./index.html">
            <img src="img/logo.png" alt="">
            </a>
          </div>
        </div>
        <div class="col-lg-7 col-md-7">
          <div class="advanced-search">
            <button type="button" class="category-btn"><%= t :all_category %></button>
            <div class="input-group">
              <input type="text" placeholder="<%= t :search %>">
              <button type="button"><i class="ti-search"></i></button>
            </div>
          </div>
        </div>
        <div class="col-lg-3 text-right col-md-3">
          <ul class="nav-right">
            <li class="heart-icon">
              <a href="#">
              <i class="icon_heart_alt"></i>
              <span>1</span>
              </a>
            </li>
            <li class="cart-icon">
              <a href="#">
              <i class="icon_bag_alt"></i>
              <span><%= total_quantity_cart @carts %></span>
              </a>
              <div class="cart-hover">
                <div class="select-items">
                  <table>
                    <tbody>
                      <% unless session_cart_exist? %>
                        <% @carts.each_with_index do |product, index| %>
                          <% next if index > 2 %>
                          <tr>
                            <td class="si-pic"><img src="assets/img/select-product-1.jpg" alt=""></td>
                            <td class="si-text">
                              <div class="product-selected">
                                <p><%= number_to_currency product.price %> x <%= current_cart[product.id.to_s] %></p>
                                <h6><%= product.name %></h6>
                              </div>
                            </td>
                            <td class="si-close">
                              <i class="ti-close"></i>
                            </td>
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td class="si-text">
                            <div class="product-selected">
                              <p><%= t :no_have_product %></p>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <div class="select-total">
                  <span><%= t :total_cart %></span>
                  <h5><%= number_to_currency total_price_cart(@carts) %></h5>
                </div>
                <div class="select-button">
                  <a href="#" class="primary-btn view-card"><%= t "header.view_cart" %></a>
                  <a href="#" class="primary-btn checkout-btn"><%= t "header.check_out" %></a>
                </div>
              </div>
            </li>
            <li class="cart-price"><%= number_to_currency total_price_cart(@carts) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="nav-item">
    <div class="container">
      <div class="nav-depart">
        <div class="depart-btn">
          <i class="ti-menu"></i>
          <span><%= t :all_departments %></span>
          <ul class="depart-hover">
            <li class="active"><a href="#"><%= t :no_link %></a></li>
          </ul>
        </div>
      </div>
      <nav class="nav-menu mobile-menu">
        <ul>
          <li class="active"><a href="./index.html"><%= t :no_link %></a></li>
          <li><a href="./shop.html"><%= t :no_link %></a></li>
          <li>
            <a href="#"><%= t :no_link %></a>
            <ul class="dropdown">
              <li><a href="#"><%= t :no_link %></a></li>
            </ul>
          </li>
          <li><a href="./blog.html"><%= t :no_link %></a></li>
          <li><a href="./contact.html"><%= t :no_link %></a></li>
          <li>
            <a href="#"><%= t :no_link %></a>
            <ul class="dropdown">
              <li><a href="./blog-details.html"><%= t :no_link %></a></li>
            </ul>
          </li>
        </ul>
      </nav>
      <div id="mobile-menu-wrap"></div>
    </div>
  </div>
</header>
<!-- Header End -->
